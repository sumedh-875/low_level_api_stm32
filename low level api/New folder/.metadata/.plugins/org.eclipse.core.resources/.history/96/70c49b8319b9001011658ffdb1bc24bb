/* USER CODE BEGIN PM */

/* USER CODE END PM */

/* Private variables ---------------------------------------------------------*/
SPI_HandleTypeDef hspi1;
DMA_HandleTypeDef hdma_spi1_tx;
DMA_HandleTypeDef hdma_spi1_rx;

TIM_HandleTypeDef htim2;

UART_HandleTypeDef huart2;

/* USER CODE BEGIN PV */
/* Private variables ---------------------------------------------------------*/
#define STUDENT_ID "1262240539"

uint8_t spi_tx_buf[8];
uint8_t spi_rx_buf[8];
volatile uint8_t spi_dma_done = 0;
volatile uint8_t spi_dma_error = 0;
volatile uint8_t flag_10ms = 0;
volatile uint32_t tick_1s = 0;

LIS3DSH_DataScaled accelData;
uint8_t who_am_i = 0;
uint8_t drdyFlag;
/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_DMA_Init(void);
static void MX_SPI1_Init(void);
static void MX_TIM2_Init(void);
static void MX_USART2_UART_Init(void);
/* USER CODE BEGIN PFP */
/* Private function prototypes -----------------------------------------------*/

/* USER CODE END PFP */

/* Private user code ---------------------------------------------------------*/
/* USER CODE BEGIN 0 */
void HAL_TIM_PeriodElapsedCallback(TIM_HandleTypeDef *htim)
{
    if (htim->Instance == TIM2)
    {
        flag_10ms = 1;        // 10 ms tick flag
        tick_1s++;            // software counter
    }
}

void HAL_SPI_TxRxCpltCallback(SPI_HandleTypeDef *hspi)
{
    if (hspi->Instance == SPI1)
    {
        spi_dma_done = 1;
    }
}

void HAL_SPI_ErrorCallback(SPI_HandleTypeDef *hspi)
{
    if (hspi->Instance == SPI1)
    {
        spi_dma_error = 1;
    }
}

void Read_LIS3DSH_DMA(void)
{
    // LIS3DSH OUT_X_L address = 0x28, set MSB=1 for read, bit6=1 for auto-increment
    spi_tx_buf[0] = 0x28 | 0xC0;
    memset(&spi_tx_buf[1], 0x00, 6);
    HAL_GPIO_WritePin(MEMS_CS_GPIO_Port, MEMS_CS_Pin, GPIO_PIN_RESET);
    if (HAL_SPI_TransmitReceive_DMA(&hspi1, spi_tx_buf, spi_rx_buf, 7) != HAL_OK)
    {
        spi_dma_error = 1;
    }
}

void Process_SPI_Data(void)
{
    int16_t rawX = (int16_t)(spi_rx_buf[2] << 8 | spi_rx_buf[1]);
    int16_t rawY = (int16_t)(spi_rx_buf[4] << 8 | spi_rx_buf[3]);
    int16_t rawZ = (int16_t)(spi_rx_buf[6] << 8 | spi_rx_buf[5]);

    accelData.x = rawX * 0.06f;  // mg/LSB (for ±2g)
    accelData.y = rawY * 0.06f;
    accelData.z = rawZ * 0.06f;

    HAL_GPIO_WritePin(MEMS_CS_GPIO_Port, MEMS_CS_Pin, GPIO_PIN_SET);
}

/* USER CODE END 0 */

/**
  * @brief  The application entry point.
  * @retval int
  */
int main(void)
{

  /* USER CODE BEGIN 1 */
  /* USER CODE END 1 */

  /* MCU Configuration--------------------------------------------------------*/

  /* Reset of all peripherals, Initializes the Flash interface and the Systick. */
  HAL_Init();

  /* USER CODE BEGIN Init */

  /* USER CODE END Init */

  /* Configure the system clock */
  SystemClock_Config();

  /* USER CODE BEGIN SysInit */

  /* USER CODE END SysInit */

  /* Initialize all configured peripherals */
  MX_GPIO_Init();
  MX_DMA_Init();
  MX_SPI1_Init();
  MX_TIM2_Init();
  MX_USART2_UART_Init();
  // --- Initialize LIS3DSH ---
  LIS3DSH_InitTypeDef accInit;
  accInit.enableAxes = LIS3DSH_XYZ_ENABLE;
  accInit.dataRate = LIS3DSH_DATARATE_100HZ;
  accInit.fullScale = LIS3DSH_FULLSCALE_2;
  accInit.antiAliasingBW = LIS3DSH_AA_BW_50;
  accInit.interruptEnable = 0; // we’re using polling/DMA

  LIS3DSH_Init(&hspi1, &accInit);
  HAL_Delay(10);

  /* USER CODE BEGIN 2 */
  // --- WHO_AM_I check ---
  uint8_t regAddr = 0x0F | 0x80;
  HAL_GPIO_WritePin(MEMS_CS_GPIO_Port, MEMS_CS_Pin, GPIO_PIN_RESET);
  HAL_SPI_Transmit(&hspi1, &regAddr, 1, HAL_MAX_DELAY);
  HAL_SPI_Receive(&hspi1, &who_am_i, 1, HAL_MAX_DELAY);
  HAL_GPIO_WritePin(MEMS_CS_GPIO_Port, MEMS_CS_Pin, GPIO_PIN_SET);

  char msg[128];
  sprintf(msg, "\r\n[ID:%s] LIS3DSH WHO_AM_I=0x%02X\r\n", STUDENT_ID, who_am_i);
  HAL_UART_Transmit(&huart2, (uint8_t*)msg, strlen(msg), HAL_MAX_DELAY);

  // --- Start 10 ms timer ---
  HAL_TIM_Base_Start_IT(&htim2);

  /* USER CODE END 2 */

  /* Infinite loop */
  /* USER CODE BEGIN WHILE */
  while (1)
  {
    /* USER CODE END WHILE */

    /* USER CODE BEGIN 3 */
	  if (flag_10ms)
	        {
	            flag_10ms = 0;
	            Read_LIS3DSH_DMA();
	        }

	        if (spi_dma_done)
	        {
	            spi_dma_done = 0;
	            Process_SPI_Data();
	        }

	        if (spi_dma_error)
	        {
	            spi_dma_error = 0;
	            sprintf(msg, "[ID:%s] DMA=ERR\r\n", STUDENT_ID);
	            HAL_UART_Transmit(&huart2, (uint8_t*)msg, strlen(msg), HAL_MAX_DELAY);
	        }

	        // --- 2s UART report ---
	        if (tick_1s >= 200)   // 200 × 10ms = 2s
	        {
	            tick_1s = 0;

	            sprintf(msg,
	                "[ID:%s] WHO_AM_I=0x%02X | X=%+0.2f | Y=%+0.2f | Z=%+0.2f | DMA=OK\r\n",
	                STUDENT_ID, who_am_i, accelData.x, accelData.y, accelData.z);
	            HAL_UART_Transmit_DMA(&huart2, (uint8_t*)msg, strlen(msg));
	        }

  }
  /* USER CODE END 3 */
}

/**
  * @brief System Clock Configuration
  * @retval None
  */
void SystemClock_Config(void)
{
  RCC_OscInitTypeDef RCC_OscInitStruct = {0};
  RCC_ClkInitTypeDef RCC_ClkInitStruct = {0};

  /** Configure the main internal regulator output voltage
  */
  __HAL_RCC_PWR_CLK_ENABLE();
  __HAL_PWR_VOLTAGESCALING_CONFIG(PWR_REGULATOR_VOLTAGE_SCALE1);

  /** Initializes the RCC Oscillators according to the specified parameters
  * in the RCC_OscInitTypeDef structure.
  */
  RCC_OscInitStruct.OscillatorType = RCC_OSCILLATORTYPE_HSI;
  RCC_OscInitStruct.HSIState = RCC_HSI_ON;
  RCC_OscInitStruct.HSICalibrationValue = RCC_HSICALIBRATION_DEFAULT;
  RCC_OscInitStruct.PLL.PLLState = RCC_PLL_ON;
  RCC_OscInitStruct.PLL.PLLSource = RCC_PLLSOURCE_HSI;
  RCC_OscInitStruct.PLL.PLLM = 8;
  RCC_OscInitStruct.PLL.PLLN = 84;
  RCC_OscInitStruct.PLL.PLLP = RCC_PLLP_DIV2;
  RCC_OscInitStruct.PLL.PLLQ = 7;
  if (HAL_RCC_OscConfig(&RCC_OscInitStruct) != HAL_OK)
  {
    Error_Handler();
  }

  /** Initializes the CPU, AHB and APB buses clocks
  */
  RCC_ClkInitStruct.ClockType = RCC_CLOCKTYPE_HCLK|RCC_CLOCKTYPE_SYSCLK
                              |RCC_CLOCKTYPE_PCLK1|RCC_CLOCKTYPE_PCLK2;
  RCC_ClkInitStruct.SYSCLKSource = RCC_SYSCLKSOURCE_PLLCLK;
  RCC_ClkInitStruct.AHBCLKDivider = RCC_SYSCLK_DIV1;
  RCC_ClkInitStruct.APB1CLKDivider = RCC_HCLK_DIV2;
  RCC_ClkInitStruct.APB2CLKDivider = RCC_HCLK_DIV2;

  if (HAL_RCC_ClockConfig(&RCC_ClkInitStruct, FLASH_LATENCY_2) != HAL_OK)
  {
    Error_Handler();
  }
}

